<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.andhika185.lexica">

    <application
		android:icon="@mipmap/ic_launcher"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:label="@string/app_name"
		android:theme="@style/AppTheme.Dark"
		android:supportsRtl="true"
		android:allowBackup="true">

        <activity android:name="com.andhika185.lexica.MainMenuActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

		<activity android:name="com.andhika185.lexica.activities.HighScoresActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden"
			android:parentActivityName="com.andhika185.lexica.MainMenuActivity">
			<meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.andhika185.lexica.MainMenuActivity" />
		</activity>

		<activity android:name="com.andhika185.lexica.activities.FoundWordsActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden"
			android:parentActivityName="com.andhika185.lexica.activities.HighScoresActivity">
			<meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.andhika185.lexica.activities.HighScoresActivity" />
		</activity>

		<activity android:name="com.andhika185.lexica.ChooseGameModeActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden"
			android:parentActivityName="com.andhika185.lexica.MainMenuActivity">
			<meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.andhika185.lexica.MainMenuActivity" />
		</activity>

		<activity android:name="com.andhika185.lexica.NewGameModeActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden"
			android:parentActivityName="com.andhika185.lexica.ChooseGameModeActivity">
			<meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.andhika185.lexica.ChooseGameModeActivity" />
		</activity>

		<activity android:name="com.andhika185.lexica.ChooseLexiconActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden"
			android:parentActivityName="com.andhika185.lexica.MainMenuActivity">
			<meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.andhika185.lexica.MainMenuActivity" />
		</activity>

		<activity android:name="com.andhika185.lexica.GameActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden"
			android:parentActivityName="com.andhika185.lexica.MainMenuActivity">
			<meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.andhika185.lexica.MainMenuActivity" />
			<intent-filter>
				<action android:name="com.serwylo.lexica.action.NEW_GAME" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
			<intent-filter>
				<category android:name="android.intent.category.DEFAULT" />
				<action android:name="com.serwylo.lexica.action.RESTORE_GAME" />
			</intent-filter>
        </activity>

        <activity android:name="com.andhika185.lexica.activities.score.ScoreActivity"
			android:screenOrientation="portrait"
			android:configChanges="orientation|keyboardHidden">
			<intent-filter>
				<action android:name="com.serwylo.lexica.action.SCORE" />
				<category android:name="android.intent.category.DEFAULT" />
			</intent-filter>
        </activity>

        <activity android:name="com.andhika185.lexica.SettingsActivity" android:exported="false" android:parentActivityName="com.andhika185.lexica.MainMenuActivity">
			<meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.andhika185.lexica.MainMenuActivity" />
			<intent-filter>
				<action android:name="com.serwylo.lexica.action.CONFIGURE" />
				<category android:name="android.intent.category.DEFAULT" />
				<category android:name="android.intent.category.PREFERENCES" />
			</intent-filter>
        </activity>

		<activity android:name="com.andhika185.lexica.HelpActivity" android:exported="false" android:parentActivityName="com.andhika185.lexica.MainMenuActivity">
		<meta-data android:name="android.support.PARENT_ACTIVITY" android:value="com.andhika185.lexica.MainMenuActivity" />
		<intent-filter>
			<action android:name="com.serwylo.lexica.action.HELP" />
			<category android:name="android.intent.category.DEFAULT" />
		</intent-filter>
	</activity>
    </application>
</manifest> 
